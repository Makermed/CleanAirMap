// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  locationId  Int      @id @default(autoincrement())
  name        String
  type        Int
  street      String
  locality    String?
  place       String
  district    String?
  region      String
  postcode    String?
  country     String
  latitude    Float
  longitude   Float
  description String?
  avgCo2      Float?
  rooms       Room[]
  created_id  Int
  created_at  DateTime @default(now())
}

model Room {
  roomId       Int       @id @default(autoincrement())
  locationId   Int
  location     Location  @relation(fields: [locationId], references: [locationId])
  name         String
  readings     Reading[]
  created_id   Int
  created_user User      @relation(fields: [created_id], references: [id])
  created_at   DateTime  @default(now())
}

model Reading {
  id           Int      @id @default(autoincrement())
  value        Decimal
  unit         String
  notes        String?
  locationId   Int
  readingRoom  Room?    @relation(fields: [roomId], references: [roomId])
  roomId       Int?
  created_id   Int
  created_user User     @relation(fields: [created_id], references: [id])
  created_at   DateTime @default(now())
}

model User {
  id       Int       @id @default(autoincrement())
  rooms    Room[]
  readings Reading[]
}
